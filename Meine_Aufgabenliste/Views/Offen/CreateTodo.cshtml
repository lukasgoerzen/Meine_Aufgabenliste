<form asp-action="CreateTodo" method="post">
    <div class="card text-center container bg-dark">
        <div class="card-header bg-dark mb-3 mt-3">
            <div class="row">
                <div class="col align-self-start">
                    <div class="form-floating">
                        <select class="form-select" id="kategorie" aria-label="Floating label select example">
                            <option selected>Bitte auswählen</option>
                            <option value="1">One</option>
                            <option value="2">Laufender Betrieb</option>
                            <option value="3">Three</option>
                        </select>
                        <label for="kategorie">Kategorie</label>
                    </div>
                </div>
                <div class="col align-self-center">
                    <div class="form-floating">
                        <select class="form-select" id="schluesselwort" aria-label="Floating label select example">
                            <option selected>Bitte auswählen</option>
                            <option value="1">One</option>
                            <option value="2">Zahlungen</option>
                            <option value="3">Three</option>
                        </select>
                        <label for="schluesselwort">Schlüsselwort</label>
                    </div>
                </div>
                <div class="col align-self-end">
                    <div class="form-floating">
                        <input disabled type="number" class="form-control" id="id" placeholder="Id" value="10">
                        <label for="id">Id</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body bg-dark bg-gradient mb-3">
            <div class="form-floating">
                <input class="form-control mb-3" placeholder="Aufgabe" id="aufgabe"/>
                <label for="aufgabe">Aufgabe</label>
            </div>
            <div class="form-floating">
                <textarea class="form-control mb-3" placeholder="Beschreibung" id="beschreibung" style="height: 100px"></textarea>
                <label for="beschreibung">Beschreibung</label>
            </div>
            <div class="form-floating">
                <textarea class="form-control" placeholder="Lösung" id="loesung" style="height: 100px"></textarea>
                <label for="loesung">Lösung</label>
            </div>
        </div>
        <div class="card-footer text-muted container bg-dark mb-3">
            <div class="row">
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="verantwortlich" aria-label="Floating label select example">
                            <option selected>Bitte auswählen</option>
                            <option value="emilia">Emilia Groth</option>
                            <option value="lukas">Lukas Görzen</option>
                        </select>
                        <label for="verantwortlich">Verantwortlich</label>
                    </div>
                </div>
                <div class="col-4 d-flex justify-content-center align-items-center">
                    <button type="submit" class="btn btn-success" tabindex="1">Speichern</button>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="status" aria-label="Floating label select example">
                            <option hidden>Bitte auswählen</option>
                            <option value="offen">Offen</option>
                            <option value="inBearbeitung">in Bearbeitung</option>
                            <option value="wartend">Wartend</option>
                            <option value="abgeschlossen">Abgeschlossen</option>
                            <option value="archiv">Archiv</option>
                        </select>
                        <label for="status">Status</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
