<title>@ViewData["Title"] - Meine Aufgabenliste</title>
<body class="bg-secondary bg-gradient">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text-center mb-4">@ViewBag.Title</h1>
            </div>
        </div>
    </div>


    <!-- Button um neues ToDo zu erstellen-->
    <div class="container mb-3">
        <div class="row">
            <div class="col align-self-center"
                <form>
                    <a asp-controller="ToDos" asp-action="CreateTodo" class="btn btn-success shadow">
                        <i class="bi bi-plus-circle"> Aufgabe hinzufügen</i>
                    </a>
                </form>
            </div>
        </div>
    </div>
</body>